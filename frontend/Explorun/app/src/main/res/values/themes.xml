<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Explorun" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NormalText" parent="Theme.Explorun">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="H1text">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2text">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H3text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="H4text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="LiveDataText" parent="Theme.Explorun">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="FeaturesText" parent="Theme.Explorun">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button" parent="Theme.Explorun">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TableElement" parent="Theme.Explorun">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="UserDetailsTable" parent="Theme.Explorun">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="OverallAnalysisTable" parent="Theme.Explorun">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="RunHistoryTable" parent="Theme.Explorun">
        <item name="android:gravity">center_vertical</item>
<!--        <item name="android:background">@drawable/table_border</item>-->
        <item name="android:layout_weight">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="RunHistoryValueEntry" parent="Theme.Explorun">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationActive" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/teal_50</item>
    </style>
    <style name="CircleButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>